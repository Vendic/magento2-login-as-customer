<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/login-as-customer/token/create" method="POST">
        <service class="Magento\LoginAsCustomer\Api\LoginAsCustomerTokenServiceInterface" method="createCustomerAccessToken"/>
        <resources>
            <resource ref="Magento_LoginAsCustomer::login_token"/>
        </resources>
    </route>
    <route url="/V1/login-as-customer/token/revoke" method="POST">
        <service class="Magento\LoginAsCustomer\Api\LoginAsCustomerTokenServiceInterface" method="revokeCustomerAccessToken"/>
        <resources>
            <resource ref="Magento_LoginAsCustomer::login_token"/>
        </resources>
    </route>
</routes>
